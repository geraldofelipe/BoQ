doctype html
html(ng-app='BoQ')
  head
    meta(charset='utf8')
    base(href='/')
    title= __('BoQ.title')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/jquery.min.js', type='text/javascript')
    script(src='/javascripts/jquery.hotkeys.js', type='text/javascript')
    script(src='/javascripts/bootstrap.min.js', type='text/javascript')
    script(src='/javascripts/bootbox.min.js', type='text/javascript')
    script(src='/javascripts/angular.min.js', type='text/javascript')
    script(src='/javascripts/angular-sanitize.min.js', type='text/javascript')
    script(src='/javascripts/angular-strap.min.js', type='text/javascript')
    script(src='/javascripts/angular-strap.tpl.min.js', type='text/javascript')
    script(src='/javascripts/angular/directives.js', type='text/javascript')
    script(src='/javascripts/angular/filters.js', type='text/javascript')
    script(src='/javascripts/angular/services.js', type='text/javascript')
    script(src='/javascripts/angular/controllers.js', type='text/javascript')
    script(src='/javascripts/ui-bootstrap-tpls-0.6.0.js', type='text/javascript')
    script(src='/javascripts/dialogs.js', type='text/javascript')
    script(src='/javascripts/app.js', type='text/javascript')
  body
    nav(class="navbar navbar-default navbar-fixed-top" role="navigation")
      div(class="navbar-header") 
        button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1") 
          span(class="sr-only") Toggle navigation
          span(class="icon-bar") 
          span(class="icon-bar") 
          span(class="icon-bar") 
        .logo
            //a(class="navbar-brand" href="#")=__('BoQ.title')
      div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1") 
        ul(class="nav navbar-nav") 
          li(id="main", class="active") 
            a(href="/")=__('BoQ.navbar.main')
          li(id="book") 
            a(href="/book")=__('BoQ.navbar.books')
        form(class="navbar-form navbar-left" role="search") 
          div(class="form-group") 
            input(type="text" class="form-control search" placeholder=__('BoQ.search')) 
          button(type="submit" class="btn btn-default search")=__('BoQ.action.submit') 
        ul(class="nav navbar-nav navbar-right") 
          li(class="dropdown") 
            a(href="#" class="dropdown-toggle" data-toggle="dropdown")=__('BoQ.navbar.options') 
                b(class="caret") 
            ul(class="dropdown-menu") 
              li 
                a(href="#") Action
              li 
                a(href="#") Another action
              li 
                a(href="#") Something else here
              li(class="divider") 
              li 
                a(href="#") Separated link

    div(class="alert alert-success" style="display:none")
        span(class="message-alert-success")=__('BoQ.messages.success')
        button(type="button", class="close" aria-hidden="true") &times;
    div(class="alert alert-info" style="display:none")
        span(class="message-alert-info")=__('BoQ.messages.info')
        button(type="button", class="close" aria-hidden="true") &times;
    div(class="alert alert-warning" style="display:none")
        span(class="message-alert-warning")=__('BoQ.messages.warning')
        button(type="button", class="close" aria-hidden="true") &times;
    div(class="alert alert-danger" style="display:none")
        span(class="message-alert-danger")=__('BoQ.messages.danger')
        button(type="button", class="close" aria-hidden="true") &times;
    block content